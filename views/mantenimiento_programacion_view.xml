<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_maintenance_request_popup_list_custom_v3" model="ir.ui.view">
            <field name="name">maintenance.request.popup.list.custom.v3</field>
            <field name="model">maintenance.request</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <list string="Seleccionar OTs" create="0" delete="0" multi_edit="0">
                    <field name="name" string="OT"/>
                    <field name="request_date" string="Fecha de solicitud"/>
                    <field name="employee_id" string="Empleado"/>
                    <field name="descripcion_corta" string="Descripción"/>
                    <field name="taller_id" string="Ubicación Técnica"/>
                    <field name="stage_id" widget="badge"/>
                </list>
            </field>
        </record>

        <record id="view_maintenance_daily_program_form" model="ir.ui.view">
            <field name="name">maintenance.daily.program.form</field>
            <field name="model">maintenance.daily.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <field name="can_edit_iso" invisible="1"/>
                        
                        <group string="Datos del Documento (Solo Calidad)">
                            <group>
                                <field name="iso_codigo" readonly="not can_edit_iso"/>
                                <field name="iso_fecha" readonly="not can_edit_iso"/>
                                <field name="iso_revision" readonly="not can_edit_iso"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="fecha_programacion"/>
                                <field name="bahia"/>
                                <field name="user_id"/>
                                <field name="programador_id"/>
                            </group>
                            <group>
                                <field name="horas_disponibles"/>
                                <field name="horas_programadas"/>
                                <div class="alert alert-warning" role="alert" invisible="horas_restantes &gt;= 0">
                                    ¡Sobrecarga de horas!
                                </div>
                                <field name="horas_restantes" decoration-danger="horas_restantes &lt; 0"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Órdenes de Trabajo (OTs)">
                                <field  name="request_ids"
                                        context="{'tree_view_ref': 'nam_mantenimiento.view_maintenance_request_popup_list_custom_v3'}">                                    
                                    <list>
                                        <field name="taller_id"/>
                                        <field name="name" string="OT"/>
                                        <field name="descripcion_corta"/>
                                        
                                        <field name="hrs" optional="hide"/>
                                        <field name="tec" optional="hide"/>
                                        <field name="hh" optional="hide"/>
                                        <field name="hh_real" optional="hide"/>

                                        <field name="description" string="Comentario" optional="hide"/>
                                        <field name="resumen_repuestos" optional="hide"/>
                                        <field name="tecnico_id" optional="hide"/>
                                        <field name="user_id" string="Líder" optional="hide"/>
                                        <field name="programador_id" optional="hide"/>
                                        <field name="porcentaje_completado" string="% Avance" widget="percentage" optional="hide"/>

                                    </list>
                                </field>           
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>     

        <record id="view_maintenance_daily_program_tree" model="ir.ui.view">
            <field name="name">maintenance.daily.program.tree</field>
            <field name="model">maintenance.daily.program</field>
            <field name="arch" type="xml">
                <list>  
                    <field name="fecha_visual" string="Fecha"/>
                    <field name="bahia"/>
                    <field name="horas_visual" width="400px" class="text-start"/> 
                    <field name="request_ids" widget="many2many_tags" string="Órdenes de Trabajo"/>    
                 </list>
            </field>
        </record>

        <record id="action_maintenance_daily_program" model="ir.actions.act_window">
            <field name="name">Programación Diaria</field>
            <field name="res_model">maintenance.daily.program</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_maintenance_daily_program"
                  name="Programación Diaria"
                  parent="maintenance.menu_maintenance_title"
                  action="action_maintenance_daily_program"
                  sequence="5"/>
    </data>
</odoo>